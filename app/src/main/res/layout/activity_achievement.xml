<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Achievement">

    <ImageView
        android:id="@+id/imageView_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_ac1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach1"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ac3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView_ac3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ac5"
        app:layout_constraintEnd_toStartOf="@+id/imageView_ac2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac1" />

    <ImageView
        android:id="@+id/imageView_ac5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach5"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ac7"
        app:layout_constraintEnd_toStartOf="@+id/imageView_ac4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac3" />

    <ImageView
        android:id="@+id/imageView_ac6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_ac7"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac4" />

    <ImageView
        android:id="@+id/imageView_ac4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach4"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ac6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_ac5"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac2" />

    <ImageView
        android:id="@+id/imageView_ac7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach7"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView_ac6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac5" />

    <ImageView
        android:id="@+id/imageView_ac2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ach2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_ac3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ac1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="通關成就"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>